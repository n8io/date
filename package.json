    "dist/**/*.*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "packageManager": "pnpm",
  "publishConfig": {
    "access": "public"
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.1.0",
    "check-code-coverage": "^1.10.5",
    "lefthook": "^1.5.5",
    "tsup": "^8.0.1",
